{
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "markdown",
    "json",
    "jsonc",
    "js",
    "ts",
    "css",
    "c",
    "h",
    "cs",
    "cpp",
    "sh",
    "ps1",
    "py"
  ],
  "coc.source.file.ignoreHidden": false,
  "json.format.enable": true,
  "yank.highlight.duration": 800,
  "python.jediEnabled": false,
  "snippets.userSnippetsDirectory": "~/.config/nvim/snips",
  "signature.target": "echo",
  "diagnostic.format": "%message [%source]",
  "diagnostic.virtualText": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,
  "suggest.timeout": 5000,
  "suggest.asciiCharactersOnly": true,
  "markdownlint.onSave": true,
  "coc.preferences.enableMarkdown": true,
  "markdownlint.config": {
    "default": true,
    "line-length": false
  },
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "email": "languagetool",
    "markdown": "markdownlint",
    "sh": "shellcheck"
  },
  "languageserver": {
    "dls": {
      "command": "diagnostic-languageserver",
      "args": ["--stdio"],
      "filetypes": ["sh", "email", "dart"],
      "initializationOptions": {
        "linters": {
          "shellcheck": {
            "command": "shellcheck",
            "debounce": 100,
            "args": ["--format=gcc", "-"],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "shellcheck",
            "formatLines": 1,
            "formatPattern": [
              "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
              {
                "line": 1,
                "column": 2,
                "message": 4,
                "security": 3
              }
            ],
            "securities": {
              "error": "error",
              "warning": "warning",
              "note": "info"
            }
          },
          "languagetool": {
            "command": "languagetool",
            "debounce": 200,
            "args": ["-"],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "languagetool",
            "formatLines": 2,
            "formatPattern": [
              "^\\d+?\\.\\)\\s+Line\\s+(\\d+),\\s+column\\s+(\\d+),\\s+([^\\n]+)\nMessage:\\s+(.*)$",
              {
                "line": 1,
                "column": 2,
                "message": [4, 3]
              }
            ]
          }
        },
        "formatters": {
          "dartfmt": {
            "command": "dartfmt",
            "args": ["--fix"]
          }
        },
        "filetypes": {
          "sh": "shellcheck",
          "email": "languagetool"
        },
        "formatFiletypes": {
          "dart": "dartfmt"
        }
      }
    }
  },
  "diagnostic-languageserver.enable": true,
  "diagnostic-languageserver.mergeConfig": true,
  "sh.enable": true,
  "cmake.cmakePath": "cmake",
  "clangd.checkUpdates": true,
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/13.0.0/clangd_13.0.0/bin/clangd",
  "omnisharp.version": "latest",
  "omnisharp.trace.server": "verbose",
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": "content",
  "explorer.file.showHiddenFiles": true,
  "explorer.position": "floating",
  "explorer.trash.command": "mv --backup=t %l ~/.trash/",
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },
  "Lua.telemetry.enable": true
}
